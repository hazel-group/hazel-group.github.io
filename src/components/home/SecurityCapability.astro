---
import { Image } from "astro:assets";
import { useTranslations } from "@i18n/util";
import Button from "@components/common/Button.astro";
const t = useTranslations(Astro);
---

<higress-security
  class="higress-security flex flex-col items-center justify-center bg-neutral py-8"
>
  <div class="higress-security-wrapper flex items-center justify-around">
    <div class="left-security-warp">
      <img
        src="https://img.alicdn.com/imgextra/i4/O1CN01bZuGIN1TS5bevTift_!!6000000002380-2-tps-1046-860.png"
      />
    </div>
    <div class="right-security-container h-full flex flex-col justify-center">
      <div class="flex flex-col">
        <div
          class="text-base-100 text-[44px] leading-[56px] text-center font-medium tracking-normal md:text-left"
        >
          {t("home.security.capability.title")}
        </div>
        <div
          class="title text-success font-normal text-center text-sm my-8 md:my-12 md:text-left"
        >
          {t("home.standards.subtitle")}
        </div>
      </div>
      <Button
        size="large"
        type="normal"
        class="rounded-3xl text-neutral w-[166px] h-[52px]"
        href="https://github.com/alibaba/higress/graphs/contributors"
        iconClass="text-neutral"
      >
        {t("home.contributors.learn.more")}
      </Button>
    </div>
  </div>
</higress-security>

<style is:global>
  .higress-security {
    .higress-security-wrapper {
      width: 85.125rem;
    }
    .left-security-warp {
      img {
        width: 523px;
        height: 430px;
      }
    }
    @media (max-width: 50rem) {
      .higress-security-wrapper {
        width: 100%;
        flex-direction: column-reverse;
        padding: 1.5rem;
      }
      .right-security-container {
        width: 100%;
        align-items: center;
      }
      .left-security-warp {
        width: 100%;
        overflow: hidden;
        img {
          width: 350px;
          object-fit: contain;
          position: relative;
          left: -40px;
        }
      }
    }
    @media (min-width: 50rem) and (max-width: 86rem) {
      .higress-security-wrapper {
        width: 100%;
      }
    }
  }
</style>
