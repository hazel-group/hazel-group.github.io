---
import { Image } from "astro:assets";
import { useTranslations } from "@i18n/util";
import Button from "@components/common/Button.astro";
const t = useTranslations(Astro);
---

<higress-standards
  class="higress-standards flex flex-col items-center justify-center bg-neutral p-6 md:p-10"
>
  <div
    class="higress-standards-wrapper md:flex block w-full bg-neutral p-9 mt-10 rounded-2xl"
  >
    <div
      class="left-container flex-1 h-full flex flex-col justify-around md:pl-[8.5rem]"
    >
      <div class="flex flex-col">
        <div
          class="text-muted text-xs text-center tracking-[0.15em] md:text-left"
        >
          {t("home.standards.title")}
        </div>
        <div
          class="title text-base-100 font-medium text-center text-lg leading-[3.5rem] md:mt-6 md:text-left md:text-[2.4rem] lg:text-[2.75rem]"
        >
          {t("home.standards.subtitle")}
        </div>
      </div>
      <Button
        size="large"
        type="normal"
        class="rounded-3xl text-neutral"
        href="https://github.com/alibaba/higress/graphs/contributors"
        iconClass="text-neutral"
      >
        {t("home.contributors.learn.more")}
      </Button>
    </div>
    <div class="right-container flex-1">
      <div
        id="right-container-warp"
        class="right-container-warp flex flex-wrap justify-around m-auto w-[16rem] ssm:w-[21rem] md:w-[25rem] lg:w-[27rem]"
      >
        <Image
          src="https://img.alicdn.com/imgextra/i3/O1CN012foBRN1lVtzLyjemW_!!6000000004825-0-tps-1002-664.jpg"
          alt="Higress Standards"
          width="501"
          height="332"
        />
      </div>
    </div>

    <style is:global>
      .higress-standards-wrapper {
      }
    </style>
  </div></higress-standards
>
